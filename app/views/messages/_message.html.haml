.chat-main__message-list
  .chat-main__message-list__box
    .chat-main__message-list__box__text
      .chat-main__message-list__box__text__name
        = message.user.name
      .chat-main__message-list__box__text__time
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat-main__message-list__box__message
      - if message.content.present?
        %p.Message__content
          = message.content
      = image_tag message.image.url, class: 'Message__image' if message.image.present?