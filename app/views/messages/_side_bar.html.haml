.side-bar
  .side-bar__user-name
    .side-bar__user-name__wrapper
      %h3.side-bar__user-name__wrapper__name
        = current_user.name
      %ul.side-bar__user-name__wrapper__icon
        %li.side-bar__user-name__wrapper__icon__left 
          = link_to "#" do
            =icon('fas', 'edit', class: 'side-bar__user-name__wrapper__icon__left__edit')
        %li.side-bar__user-name__wrapper__icon__right 
          = link_to edit_user_path(current_user), class: "Contents__btn" do
            =icon('fas', 'cog', class: 'side-bar__user-name__wrapper__icon__right__cog')

  .side-bar__group-list
    .side-bar__group-list__wrapper
      = link_to "#" do
        %p.side-bar__group-list__wrapper__group-name
          techcamp
        %p.side-bar__group-list__wrapper__group-message
          まだメッセージはありません
    .side-bar__group-list__wrapper
      = link_to "#" do
        %p.side-bar__group-list__wrapper__group-name
          test
        %p.side-bar__group-list__wrapper__group-message
          まだメッセージはありません





